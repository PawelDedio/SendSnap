<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.pdedio.sendsnap.ui.views.BaseImageView_
        android:id="@+id/ivEditSnapPhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextureView
        android:id="@+id/tvEditSnapVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.example.pdedio.sendsnap.ui.views.BaseImageButton_
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/edit_snap_btn_accept_margin_bottom"
        android:layout_marginRight="@dimen/edit_snap_btn_accept_margin_right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/btn_accept_snap"
        android:background="@android:color/transparent"/>
</RelativeLayout>