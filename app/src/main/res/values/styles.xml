<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditSnapTopButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">@dimen/edit_snap_btn_content_margin_top</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="EditSnapBottomButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/edit_snap_bottom_buttons_margin_bottom</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <!-- Action Bar Blue -->
    <style name="ActionBarBlue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/action_bar_blue_height</item>
        <item name="android:paddingRight">@dimen/action_bar_blue_margin_horizontal</item>
        <item name="android:background">@color/action_bar_blue_background</item>
    </style>

    <style name="ActionBarBlueBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ActionBarBlueBtnBack" parent="ActionBarBlueBtn">
        <item name="android:src">@drawable/btn_back_white</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    
    <style name="ActionBarBlueTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/action_bar_blue_text_size</item>
        <item name="android:textColor">@color/action_bar_blue_text</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <!-- Buttons -->
    <style name="ButtonTransparentGreenBorder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/btn_transparent_green_height</item>
        <item name="android:textSize">@dimen/btn_transparent_green_text_size</item>
        <item name="android:textColor">@color/btn_transparent_green_border_text_selector</item>
        <item name="android:background">@drawable/btn_transparent_green_border_selector</item>
        <item name="android:paddingLeft">@dimen/btn_transparent_green_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/btn_transparent_green_padding_horizontal</item>
    </style>

    <style name="ButtonTransparentOrangeBorder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/btn_transparent_orange_height</item>
        <item name="android:textSize">@dimen/btn_transparent_orange_text_size</item>
        <item name="android:textColor">@color/btn_transparent_orange_border_text_selector</item>
        <item name="android:background">@drawable/btn_transparent_orange_border_selector</item>
        <item name="android:paddingLeft">@dimen/btn_transparent_orange_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/btn_transparent_orange_padding_horizontal</item>
    </style>

    <style name="ButtonCameraMenu">
        <item name="android:layout_width">@dimen/camera_menu_buttons_size</item>
        <item name="android:layout_height">@dimen/camera_menu_buttons_size</item>
        <item name="android:layout_marginTop">@dimen/camera_menu_margin_between_elements</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitCenter</item>
    </style>


    <!-- Edit Text Themes -->
    <style name="EditTextGreenTheme" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/et_green_bottom_divider</item>
        <item name="colorControlNormal">@color/et_green_bottom_divider</item>
        <item name="colorControlActivated">@color/et_green_bottom_divider</item>
        <item name="colorControlHighlight">@color/et_green_bottom_divider</item>
    </style>

    <style name="EditTextOrangeTheme" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/et_orange_bottom_divider</item>
        <item name="colorControlNormal">@color/et_orange_bottom_divider</item>
        <item name="colorControlActivated">@color/et_orange_bottom_divider</item>
        <item name="colorControlHighlight">@color/et_orange_bottom_divider</item>
    </style>


    <!-- Edit Texts -->
    <style name="EditTextGreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/et_green_text_size</item>
        <item name="android:textColor">@color/et_green_text</item>
        <item name="android:textColorHint">@color/et_green_text_hint</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:theme">@style/EditTextGreenTheme</item>
    </style>

    <style name="EditTextOrange">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/et_orange_text_size</item>
        <item name="android:textColor">@color/et_orange_text</item>
        <item name="android:textColorHint">@color/et_orange_text_hint</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:theme">@style/EditTextOrangeTheme</item>
    </style>


    <!-- Text Input Layout Themes -->
    <style name="TextInputLayoutGreenTheme" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/et_green_text_hint</item>
    </style>

    <style name="TextInputLayoutOrangeTheme" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/et_orange_text_hint</item>
    </style>


    <!-- Text Input Layouts -->
    <style name="TextInputLayoutGreen">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="hintTextAppearance">@style/TextInputLayoutGreenTheme</item>
    </style>

    <style name="TextInputLayoutOrange">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="hintTextAppearance">@style/TextInputLayoutOrangeTheme</item>
    </style>


    <!-- Text Views -->
    <style name="TextViewCameraMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/camera_menu_buttons_margin_between_text</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/camera_menu_buttons_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewSettingsSectionLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingTop">@dimen/settings_txv_section_label_margin_vertical</item>
        <item name="android:paddingBottom">@dimen/settings_txv_section_label_margin_vertical</item>
        <item name="android:layout_marginLeft">@dimen/settings_content_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/settings_content_margin_horizontal</item>
        <item name="android:textSize">@dimen/settings_txv_section_label_text_size</item>
        <item name="android:textColor">@color/settings_section_label_text</item>
    </style>
    
    <style name="TextViewSettingsFieldLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/settings_content_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/settings_content_margin_horizontal</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginTop">@dimen/settings_txv_field_label_margin_top</item>
        <item name="android:textSize">@dimen/settings_txv_field_label_text_size</item>
        <item name="android:textColor">@color/settings_field_label_text</item>
    </style>

    <style name="TextViewSettingsFieldContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/settings_content_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/settings_content_margin_horizontal</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginTop">@dimen/settings_txv_field_content_margin_top</item>
        <item name="android:textSize">@dimen/settings_txv_field_content_text_size</item>
        <item name="android:textColor">@color/settings_field_content_text</item>
    </style>


    <!-- Others -->
    <style name="SettingsSectionDivider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/settings_divider_height</item>
        <item name="android:background">@color/settings_section_divider_background</item>
    </style>

    <style name="SettingsFieldsDivider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/settings_field_divider_height</item>
        <item name="android:layout_marginTop">@dimen/settings_field_divider_margin_top</item>
        <item name="android:background">@color/settings_field_divider_background</item>
    </style>
</resources>
